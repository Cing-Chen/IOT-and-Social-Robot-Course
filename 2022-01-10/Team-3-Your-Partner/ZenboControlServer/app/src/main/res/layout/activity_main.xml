<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idReveal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="343dp"
        android:layout_height="235dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:maxLines="14"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humiStatus" />

    <TextView
        android:id="@+id/lightStatus"
        android:layout_width="168dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="79dp"
        android:text="lightStatus"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idReveal" />

    <TextView
        android:id="@+id/tempStatus"
        android:layout_width="168dp"
        android:layout_height="90dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="23dp"
        android:text="tempratureStatus"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idReveal" />

    <TextView
        android:id="@+id/humiStatus"
        android:layout_width="168dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="humidityStatus"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightStatus" />

    <TextView
        android:id="@+id/motionStatus"
        android:layout_width="168dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="19dp"
        android:text="motionStatus"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempStatus" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="105dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:text="light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lightStatus"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:layout_marginEnd="64dp"
        android:text="Temperature"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tempStatus"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:text="Humidity"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/humiStatus"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:layout_marginEnd="87dp"
        android:text="Motion"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/motionStatus"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="22dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>